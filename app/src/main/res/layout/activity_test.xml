<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android_study.Test"
    android:orientation="vertical">

    <EditText
        android:text="0"
        android:gravity="right|center"
        android:textSize="50dp"
        android:paddingRight="10dp"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#323E80"
        android:orientation="horizontal"
        >
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/one"
            android:text="1"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688" />
        <TextView
            android:id="@+id/two"
            android:text="2"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/three"
            android:text="3"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/CA"
            android:text="CA"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FF5722"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/four"
            android:text="4"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/five"
            android:text="5"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/six"
            android:text="6"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/plus"
            android:text="+"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FF5722"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seven"
            android:text="7"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/eight"
            android:text="8"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/nine"
            android:text="9"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
        <TextView
            android:id="@+id/zero"
            android:text="0"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#009688"/>
    </LinearLayout>
</LinearLayout>